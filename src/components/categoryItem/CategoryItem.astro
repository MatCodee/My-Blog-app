---
const {title} = Astro.props;
---

<a class="tag" href={`/category/${title}/`}>
    <img src="folder.svg" alt="">
    <p class="tag-name">
        {title}
    </p>
</a>

<style>
    .tag {
        gap: 30px;
        cursor: pointer;
        min-width: 100px;
        height: 50px;
        padding: 10px 50px;
        display: inline-flex;
        justify-content: center;
        align-items: center;

        background-color: rgb(244, 244, 244);
        border-radius: 10px;
        color: black;
        text-decoration: none;
    }
    .tag:hover {
        color: black;
        box-shadow: var(--box-shadow-item);
    }
    .tag p {
        padding: 0;
        margin: 0;
    }
    .tag img {
        width: 2rem;
        height: 2rem;
    }
</style>